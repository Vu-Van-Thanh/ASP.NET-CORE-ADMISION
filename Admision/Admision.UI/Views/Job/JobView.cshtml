<div class="dashboard-container">
    <!-- Bộ lọc -->
    <div class="filter-panel">
        <h3>Bộ lọc</h3>
        <form id="filterForm">
            <!-- Bộ lọc ngành nghề -->
            <label for="major">Ngành nghề:</label>
            <select id="major" name="major">
                <option value="">Tất cả</option>
                <option value="IT">IT</option>
                <option value="Marketing">Marketing</option>
                <option value="Finance">Finance</option>
            </select>

            <!-- Bộ lọc tỉnh thành -->
            <label for="province">Tỉnh/Thành phố:</label>
            <select id="province" name="province">
                <option value="">Tất cả</option>
                <option value="Hà Nội">Hà Nội</option>
                <option value="Hồ Chí Minh">Hồ Chí Minh</option>
                <option value="Đà Nẵng">Đà Nẵng</option>
            </select>

            <!-- Bộ lọc mức lương -->
            <label for="wage">Mức lương:</label>
            <select id="wage" name="wage">
                <option value="">Tất cả</option>
                <option value="0-1000">0-1000 USD</option>
                <option value="1000-2000">1000-2000 USD</option>
                <option value="2000-3000">2000-3000 USD</option>
                <option value="3000+">Trên 3000 USD</option>
            </select>

            <!-- Nút áp dụng bộ lọc -->
            <button type="button" id="applyFilter">Áp dụng bộ lọc</button>
        </form>
    </div>

    <!-- Khung chứa biểu đồ -->
    <div class="chart-panel">
        <h3>Biểu đồ</h3>

        <!-- Biểu đồ phân bổ việc làm theo ngành -->
        <div class="chart-container">
            <h4>Phân bổ việc làm theo ngành</h4>
            <canvas id="jobDistributionChart"></canvas>
        </div>

        <!-- Biểu đồ xu hướng số lượng việc làm -->
        <div class="chart-container">
            <h4>Xu hướng số lượng việc làm</h4>
            <canvas id="jobTrendChart"></canvas>
        </div>

        <!-- Biểu đồ phân bố lương -->
        <div class="chart-container">
            <h4>Phân bố lương</h4>
            <canvas id="salaryDistributionChart"></canvas>
        </div>
    </div>
</div>

