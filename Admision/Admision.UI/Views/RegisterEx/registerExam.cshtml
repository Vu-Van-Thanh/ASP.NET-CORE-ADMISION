@model RegisterExDTO
<link rel="stylesheet" href="~/css/registerExam.css" asp-append-version="true" />

<div class="examregis-container">
    <h1 class="examregis-title">Đăng Ký Thi</h1>
    <form id="examregis-form" asp-controller="Register" asp-action="registerExam" method="post">
        <!-- Full Name -->
        <div class="examregis-form-group">
            <label for="examregis-FullName">Họ và Tên</label>
            <input type="text" id="examregis-FullName" name="FullName" required maxlength="40" placeholder="Nhập họ và tên" />
            <span class="examregis-error" id="examregis-FullNameError"></span>
        </div>

        <!-- Gender -->
        <div class="examregis-form-group">
            <label for="examregis-Gender">Giới Tính</label>
            <select id="examregis-Gender" name="Gender" required>
                <option value="">Chọn giới tính</option>
                <option value="Male">Nam</option>
                <option value="Female">Nữ</option>
                <option value="Other">Khác</option>
            </select>
        </div>

        <!-- Identity Card Number -->
        <div class="examregis-form-group">
            <label for="examregis-IdentityCardNumber">Căn Cước Công Dân</label>
            <input type="text" id="examregis-IdentityCardNumber" name="IdentityCardNumber" required pattern="^\d{9,12}$" maxlength="12" placeholder="Nhập căn cước công dân" />
            <span class="examregis-error" id="examregis-IdentityCardNumberError"></span>
        </div>

        <!-- Date of Birth -->
        <div class="examregis-form-group">
            <label for="examregis-DateOfBirth">Ngày Sinh</label>
            <input type="date" id="examregis-DateOfBirth" name="DateOfBirth" required />
        </div>

        <!-- Address -->
        <div class="examregis-form-group">
            <label for="examregis-Address">Địa Chỉ</label>
            <textarea id="examregis-Address" name="Address" maxlength="200" placeholder="Nhập địa chỉ"></textarea>
        </div>

        <!-- Admission Method -->
        <div class="examregis-form-group">
            <label for="examregis-AdmissionMethod">Phương thức xét tuyển</label>
            <input type="text" id="examregis-AdmissionMethod" name="AdmissionMethod" required placeholder="Nhập phương thức xét tuyển" />
        </div>

        <!-- High School -->
        <div class="examregis-form-group">
            <label for="examregis-HighSchool">Trường Trung Học Phổ Thông</label>
            <input type="text" id="examregis-HighSchool" name="HighSchool" required placeholder="Nhập tên trường" />
        </div>

        <!-- Graduated Year -->
        <div class="examregis-form-group">
            <label for="examregis-GraduatedYear">Năm Tốt Nghiệp</label>
            <input type="text" id="examregis-GraduatedYear" name="GraduatedYear" required placeholder="Nhập năm tốt nghiệp" />
        </div>

        <!-- GPA 10 -->
        <div class="examregis-form-group">
            <label for="examregis-GPA10">GPA lớp 10</label>
            <input type="number" id="examregis-GPA10" name="GPA10" required step="0.1" min="0" max="10" placeholder="Nhập GPA lớp 10" />
        </div>

        <!-- GPA 11 -->
        <div class="examregis-form-group">
            <label for="examregis-GPA11">GPA lớp 11</label>
            <input type="number" id="examregis-GPA11" name="GPA11" required step="0.1" min="0" max="10" placeholder="Nhập GPA lớp 11" />
        </div>

        <!-- GPA 12 -->
        <div class="examregis-form-group">
            <label for="examregis-GPA12">GPA lớp 12</label>
            <input type="number" id="examregis-GPA12" name="GPA12" required step="0.1" min="0" max="10" placeholder="Nhập GPA lớp 12" />
        </div>

        <!-- Email -->
        <div class="examregis-form-group">
            <label for="examregis-Email">Email</label>
            <input type="email" id="examregis-Email" name="Email" required placeholder="Nhập email" />
            <span class="examregis-error" id="examregis-EmailError"></span>
        </div>

        <!-- Phone -->
        <div class="examregis-form-group">
            <label for="examregis-Phone">Số Điện Thoại</label>
            <input type="text" id="examregis-Phone" name="Phone" required pattern="^[0-9]*$" placeholder="Nhập số điện thoại" />
            <span class="examregis-error" id="examregis-PhoneError"></span>
        </div>

        <!-- Portrait Path -->
        <div class="examregis-form-group">
            <label for="examregis-PortraitPath">Ảnh Chân Dung</label>
            <input type="file" id="examregis-PortraitPath" name="PortraitPath" required />
        </div>

        <!-- Identity Card Front Side -->
        <div class="examregis-form-group">
            <label for="examregis-IdentityCardFrontSide">Ảnh Mặt Trước Căn Cước</label>
            <input type="file" id="examregis-IdentityCardFrontSide" name="IdentityCardFrontSide" required />
        </div>

        <!-- Identity Card Back Side -->
        <div class="examregis-form-group">
            <label for="examregis-IdentityCardBackSide">Ảnh Mặt Sau Căn Cước</label>
            <input type="file" id="examregis-IdentityCardBackSide" name="IdentityCardBackSide" required />
        </div>

        <!-- Transcript Path -->
        <div class="examregis-form-group">
            <label for="examregis-TranscriptPath">Bảng Điểm</label>
            <input type="file" id="examregis-TranscriptPath" name="TranscriptPath" required />
        </div>

        <!-- Submit Button -->
        <div class="examregis-form-group">
            <button type="submit" class="examregis-btn">Đăng Ký</button>
        </div>
    </form>
</div>

<script>
    document.getElementById("examregis-form").addEventListener("submit", function (event) {
        event.preventDefault();

        // Add custom validation logic here

        // If valid, submit the form data
        alert("Đăng ký thành công!");
    });
</script>
