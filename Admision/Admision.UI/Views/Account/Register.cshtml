@model RegisterDTO
@{
	ViewBag.Title = "Register";
	Layout = "";
	ViewBag.CurrentUrl = "~/Account/Register";
}



<!DOCTYPE html>
<html lang="en">

<head>
	<title>Đăng kí tài khoản</title>
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="keywords"
		  content="Register Form Responsive" />
	<!-- jquery file -->
	<script src="~/JS/jquery.js"></script>
	@* <script src="~/JS/login.js"></script> *@
	<!-- css files -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
	<link rel="stylesheet" href="~/css/font-awesome.min.css" />
	<link rel="stylesheet" href="~/css/formRegister.css" aspasp-append-version="true"/>
	<!-- /css files -->
	<!-- online fonts -->
	<!-- <link href="//fonts.googleapis.com/css?family=Sirin+Stencil" rel="stylesheet"> -->
	<!-- online fonts -->
</head>

<body>
	<div class="container demo-1">
		<div class="content">
			<div id="large-header" class="large-header">
				
				<div class="main-agileits">
					<div class="form-w3-agile">
						<h2>ĐĂNG KÍ</h2>
						<form asp-controller="Account" asp-action="Register" method="post">
							<div class="form-sub-w3">
								<input type="text" asp-for="PersonName" placeholder="Họ tên " required="" />
								<span asp-validation-for="PersonName" class="text-red"></span>
								<div class="icon-w3">
									<i class="fa fa-user" aria-hidden="true"></i>
								</div>
							</div>

							<div class="form-sub-w3">
								<input type="text" asp-for="Email" placeholder="Email" required="" />
								<span asp-validation-for="Email" class="text-red validation-message"></span>
								<div class="icon-w3">
									<i class="fa fa-envelope" aria-hidden="true"></i>
								</div>
							</div>
							<div class="form-sub-w3">
								<input type="text" asp-for="Phone" placeholder="Số điện thoại" required="" />
								<span asp-validation-for="Phone" class="text-red"></span>
								<div class="icon-w3">
									<i class="fa fa-phone" aria-hidden="true"></i>
								</div>
							</div>
							<div class="form-sub-w3">
								<input type="password" asp-for="Password" placeholder="Mật khẩu" required="" />
								<span asp-validation-for="Password" class="text-red"></span>
								<div class="icon-w3">
									<i class="fa fa-unlock-alt" aria-hidden="true"></i>
								</div>
							</div>

							<div class="form-sub-w3">
								<input type="password" asp-for="ConfirmPassword" placeholder="Xác nhận mật khẩu" required="" />
								<span asp-validation-for="ConfirmPassword" class="text-red"></span>
								<div class="icon-w3">
									<i class="fa fa-unlock-alt" aria-hidden="true"></i>
								</div>
							</div>

							<div class="form-sub-w3 user-type">

								<div class="flex-1">
									<input type="radio" id="User" asp-for="UserType" value="User" checked />
									<label for="User">User</label>

									<input type="radio" id="Admin" asp-for="UserType" value="Admin" />
									<label for="Admin">Admin</label>
								</div>
							</div>
							<div class="clear"></div>
							<div class="submit-w3l">
								<input id="btnLogIn" type="submit" value="Đăng kí">
							</div>
						</form>
						<div class="social w3layouts">
							<div class="heading">
								<h5>Hoặc đăng nhập :</h5>
								<div class="clear"></div>
							</div>
							<div class="icons">
								<a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
								<a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
								<a href="#"><i class="fa fa-pinterest-p" aria-hidden="true"></i></a>
								<a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
								<a style="border:1px solid white;" href="Account/login"><i class="fa fa-home" aria-hidden="true"></i></a>
								<div class="clear"></div>
							</div>
							<div class="clear"></div>
						</div>
					</div>
					<!--//form-ends-here-->
				</div><!-- copyright -->
				<div class="copyright w3-agile">
					<p style="color:black">&copy; 2024 Đại học Bách Khoa Hà Nội. All rights reserved.</p>
				</div>
				<!-- //copyright -->
			</div>
		</div>
	</div>

</body>

</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-test="window.jQuery" asp-fallback-src="~/jquery.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js" asp-fallback-test="window.jQuery.validator" asp-fallback-src="~/jquery.validate.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" asp-fallback-test="window.jQuery.validator.unobstrusive" asp-fallback-src="~/jquery.validate.unobtrusive.min.js"></script>