@model IEnumerable<Admission.UI.ViewModels.Category>
<div class="category-menu">
    <h2>DANH MỤC</h2>
    <ul>
        @foreach (var category in Model)
        {
            <li>
                <span>@category.Title</span>
                <ul>
                    @foreach (var subItem in category.SubItems)
                    {
                        <li>@subItem</li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>
