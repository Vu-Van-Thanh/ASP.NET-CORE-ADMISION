@model List<ExamClassDTO>



<body>
    <div class="container mt-4">
        @foreach (var examClass in Model)
        {
            <div class="row mb-3">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title mb-0">@examClass.MajorName</h5>
                                <p class="mb-1"><strong>Phương thức xét tuyển:</strong> @examClass.AdmissionMethod</p>
                                <p class="mb-1"><strong>Ngày thi:</strong> @examClass.TestDate</p>
                                <p class="mb-1"><strong>Phòng thi:</strong> @examClass.TestRoom</p>
                                <p class="mb-1"><strong>Ca thi:</strong> @examClass.ExamPeriod</p>
                                <p class="mb-1"><strong>Trạng thái thanh toán:</strong> @examClass.PaymentStatus</p>
                            </div>
                            <div>
                                <button class="btn btn-success me-2" onclick="payExam('@examClass.Id')">Thanh toán</button>
                                <button class="btn btn-primary" onclick="viewDetail('@examClass.Id')">Xem chi tiết</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

