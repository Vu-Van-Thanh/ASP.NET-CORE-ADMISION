<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        /* Tổng thể */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f9;
            color: #333;
        }

        /* Navbar */
        .navbar {
            background-color: #2c3e50; /* Navy */
            color: white;
        }

            .navbar .navbar-brand {
                font-weight: bold;
                font-size: 1.5rem;
                color: #f1c40f; /* Vàng ánh kim */
            }

                .navbar .navbar-brand:hover {
                    color: #ffffff;
                }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            background-color: #34495e; /* Xám đậm */
            color: #ecf0f1; /* Trắng nhạt */
            padding: 20px;
            min-width: 250px;
        }

            .sidebar h2 {
                font-size: 1.5rem;
                color: #f1c40f; /* Vàng ánh kim */
                margin-bottom: 30px;
                text-align: center;
            }

            .sidebar a {
                display: flex;
                align-items: center;
                color: #ecf0f1;
                text-decoration: none;
                font-size: 1.1rem;
                padding: 10px 15px;
                border-radius: 8px;
                margin-bottom: 15px;
            }

                .sidebar a:hover {
                    background-color: #1abc9c; /* Xanh lục nhạt */
                    color: white;
                }

                .sidebar a i {
                    margin-right: 10px;
                }

        /* Main content */
        .main-content {
            padding: 30px;
            flex-grow: 1;
        }

            .main-content h1 {
                color: #2c3e50;
                margin-bottom: 20px;
            }

        /* Card */
        .card {
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .card-header {
            background-color: #2c3e50;
            color: white;
            font-weight: bold;
        }

        /* Footer */
        .footer {
            background-color: #2c3e50; /* Navy */
            color: white;
            text-align: center;
            padding: 15px 0;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Admin Panel</a>
        </div>
    </nav>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h2>Quản lý</h2>
            <a href="~/admin/home/index"><i class="bi bi-house-door"></i> Trang chủ</a>
            <a href="~/admin/article/UploadNews"><i class="bi bi-file-earmark-plus"></i> Đăng bài viết</a>
            <a href="~/admin/Major/UpdateMajorAdmission"><i class="bi bi-pencil-square"></i> Cập nhật bài viết</a>
            <a href="~/admin/registerEX/ExamRegister"><i class="bi bi-calendar-event"></i> Phân bổ phòng thi</a>
            <a href="#"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>© 2024 Admin Panel. All Rights Reserved.</p>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
